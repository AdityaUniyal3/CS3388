#version 410 core
in vec3 frag_normal;
out vec4 color;

void main() {
    vec3 lightDir = normalize(vec3(0.5, 1.0, 0.5));
    float diff = max(dot(normalize(frag_normal), lightDir), 0.0);
    vec3 diffuse = vec3(0.2, 0.6, 1.0) * diff;
    vec3 ambient = vec3(0.05, 0.1, 0.2);
    color = vec4(diffuse + ambient, 1.0);
}
