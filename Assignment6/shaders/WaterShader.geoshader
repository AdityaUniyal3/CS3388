#version 410 core
layout(triangles) in;
layout(triangle_strip, max_vertices = 3) out;

in vec3 position_tes[];
out vec3 frag_normal;

void main() {
    vec3 p0 = position_tes[0];
    vec3 p1 = position_tes[1];
    vec3 p2 = position_tes[2];

    vec3 normal = normalize(cross(p1 - p0, p2 - p0));

    for (int i = 0; i < 3; ++i) {
        frag_normal = normal;
        gl_Position = gl_in[i].gl_Position;
        EmitVertex();
    }
    EndPrimitive();
}
